Comentários particulares
import java.util.Scanner;

public class angeloMiguel_1329_CaraCoroa {
    final static Scanner LER = new Scanner(System.in);

    public static int lerInt() {
        return LER.nextInt();
    }


    public static void main(String[] args) {
        int qtdVezesJogadas = 0;
        int vitoriasMary = 0;
        int vitoriasJohn = 0;
        int valorCaraCoroa = 0;
        // casos infinitos com while (true) percebe isso na entrada dizendo varios casos
        // de testes
        while (true) {
            // qtd de vezes que vai pedir as jogadas deles
            qtdVezesJogadas = lerInt();
            //caso não foi jogado acaba o código
            if(qtdVezesJogadas == 0){
                break;
            }

            // resete na quantidade de vitórias para ser um valor por loop

            vitoriasJohn = 0;
            vitoriasMary = 0;

            // loop de recebimento do valor da moeda e verificação de vitória
            for (int i = 0; i < qtdVezesJogadas; i++) {
                valorCaraCoroa = lerInt();
                // verificação de vitória
                if (valorCaraCoroa > 0) {
                    vitoriasJohn++;
                } else {
                    vitoriasMary++;
                }
            }

            System.out.printf("Mary won %d times and John won %d times\n", vitoriasMary, vitoriasJohn);
        }
    }
}
